<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="80dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@android:color/transparent"
                android:startColor="@color/background_shadow"/>
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/station_list_container_background" />
            <corners android:topLeftRadius="18dp"
                android:topRightRadius="18dp" />
        </shape>
    </item>
</layer-list>